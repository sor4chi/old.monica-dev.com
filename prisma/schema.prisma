// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Work {
  id         Int            @id @default(autoincrement())
  slug       String         @unique
  title      String
  content    String
  category   WorksCategory? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

model WorksCategory {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  name      String
  works     Work[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogsTag {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  name      String
  blogs     TagOnBlog[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  blogId    Int
}

model Blog {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  title     String
  content   String
  qiitaUrl  String?
  zennUrl   String?
  tags      TagOnBlog[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model TagOnBlog {
  tag        BlogsTag @relation(fields: [tagId], references: [id])
  tagId      Int
  blog       Blog     @relation(fields: [blogId], references: [id])
  blogId     Int
  assignedAt DateTime @default(now())

  @@id([blogId, tagId])
}

model TimelineCategory {
  id        Int        @id @default(autoincrement())
  slug      String     @unique
  name      String
  Timeline  Timeline[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Timeline {
  id         Int              @id @default(autoincrement())
  title      String
  content    String
  category   TimelineCategory @relation(fields: [categoryId], references: [id])
  categoryId Int
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  happenedAt DateTime
}
